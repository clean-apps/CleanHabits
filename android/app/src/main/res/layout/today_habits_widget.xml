<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/todayWidget"
    android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/todayWidgetHeaderText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_title_min_height"
            android:background="@color/accent"
            android:gravity="center|left"
            android:paddingLeft="@dimen/widget_listview_padding_title"
            android:text="@string/todayWidgetHeaderText"
            android:textColor="@android:color/white"
            android:textSize="16dp"></TextView>
    </RelativeLayout>

    <LinearLayout   android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <ListView
            android:id="@+id/todayWidgetListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:dividerHeight="1dp"
            android:divider="#eeeeee"
            android:clickable="false"
            tools:listitem="@layout/today_widget_listitem">
        </ListView>
    </LinearLayout>

</LinearLayout>